wrongAnswer =   True
while wrongAnswer :
    valeur=input('quelle est le repas le plus important ')
    if valeur == '1' :
        print("bonne reponse")
        wrongAnswer=   False
    elif valeur == '2' :
        print ('mauvaise reponse')
        wrongAnswer = False
    elif valeur =='3'  :
         print ('mauvaise reponse')
    else : 
          print('reessayer avec 1 , 2 ou 3 ')
print()
          
